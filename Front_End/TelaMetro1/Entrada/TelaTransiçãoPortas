package com.mycompany.simulacao_metro;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class TelaTransicaoPortas extends JFrame {
    private JLabel labelImagem;
    private String[] imagens = {
        "/imagens/porta_fechada.jpeg",
        "/imagens/porta_semiaberta.jpeg",
        "/imagens/porta_abertas.jpeg"
    };
    private int indiceAtual = 0;
    private Timer timer;

    public TelaTransicaoPortas() {
        setTitle("Transição das Portas");
        setSize(800, 600);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        labelImagem = new JLabel();
        labelImagem.setHorizontalAlignment(JLabel.CENTER);
        labelImagem.setVerticalAlignment(JLabel.CENTER);
        add(labelImagem);

        mostrarProximaImagem();

        timer = new Timer(1000, new ActionListener() { // intervalo de 1 segundo
            @Override
            public void actionPerformed(ActionEvent e) {
                indiceAtual++;
                if (indiceAtual < imagens.length) {
                    mostrarProximaImagem();
                } else {
                    timer.stop();

                }
            }
        });
        timer.start();

        setVisible(true);
    }

    private void mostrarProximaImagem() {
        ImageIcon icon = new ImageIcon(getClass().getResource(imagens[indiceAtual]));
        Image imagemRedimensionada = icon.getImage().getScaledInstance(getWidth(), getHeight(), Image.SCALE_SMOOTH);
        labelImagem.setIcon(new ImageIcon(imagemRedimensionada));
    }
}

